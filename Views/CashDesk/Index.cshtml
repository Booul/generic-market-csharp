@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/front.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
</head>
<body>

                <div>
                        <div id="topbar">
                            <b>Generic Market CSharp</b>
                        </div>
                </div>

    <div class="container">
        <hr>
        <div class="row">
            <div class="col-sm-4">
                <h2>Product: </h2>
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Product code">
                    <span class="input-group-btn">
                        <button class="btn btn-success" type="button">Search</button>
                    </span>
                </div>
                <br>
                <h3>Info</h3>
                <hr>
                <form class="form-horizontal">
                <label>Name</label>
                <input type="text" class="form-control" placeholder="Product name" disabled>
                <br>
                <label>Category</label>
                <input type="text" class="form-control" placeholder="Category name" disabled>
                <br>
                <label>Supplier</label>
                <input type="text" class="form-control" placeholder="Supplier name" disabled>
                <br>
                <label>Purchase price</label>
                <input class="form-control" type="number" step="any" placeholder="0.00" disabled>
                <span></span><br>
                <label>Sale price</label>
                <input class="form-control"  type="number" step="any" placeholder="0.00" disabled><br>
                
                <label>Count</label>
                <input class="form-control" type="number" step="any" placeholder="0"><br>
                
                <button class="btn btn-success">Confirm</button>
                </form>

            </div>
            <div class="col-sm-8">
                    <h3>Purchase: </h3>
                    <hr>
                <div id="table-scroll">
                    <table id="produtos" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Sale price</th>
                                <th>Measurement type</th>
                                <th>Total</th>
                                <th>Remove</th>
                                </tr>
                                </thead>
                        <tbody>  
                        </tbody>
                        </table>
                </div>
            </div>
        </div>
        <hr>
        <div class="row" >
            <hr>
            <div class="col-sm-4"></div>
            <div class="col-sm-4 text-center">
                    <button type="button" class="btn btn-success" style="width: 95px;">Checkout</button>
                    <button type="button" class="btn btn-danger" style="width: 95px;">Cancel</button>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <hr>
    </div>

</body>
</html>