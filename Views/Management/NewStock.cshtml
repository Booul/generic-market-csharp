@model generic_market_csharp.Models.Stock;

@{
    Layout = "_LayoutManagement";
}

<h2>New stock</h2>
<hr/>
<form class="form-horizontal" asp-controller="Stock" asp-action="Save" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="ProductId">Product</label>
    <select class="form-control" asp-for="ProductId" asp-items='@(new SelectList(@ViewBag.Products, "Id", "Name"))'></select>
    <span asp-validation-for="ProductId"></span><br>
    <label asp-for="Amount">Amount</label>
    <input type="number" class="form-control" asp-for="Amount" placeholder="0">
    <span asp-validation-for="Amount"></span><br>
    <button class="btn btn-success">Register</button>
</form>
<hr/>