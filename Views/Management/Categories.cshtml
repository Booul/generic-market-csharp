@model IEnumerable<generic_market_csharp.Models.Category>

@{
    Layout = "_LayoutManagement";
}

<h2>Categorias</h2>
<hr/>
<a asp-action="NewCategory" asp-controller="Management" class="btn btn-success">
    Criar nova categoria
</a>
<hr/>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <button class="btn btn-primary">Editar</button>
                    <button class="btn btn-danger">Deletar</button>
                </td>
            </tr>
        }
    </tbody>
</table>