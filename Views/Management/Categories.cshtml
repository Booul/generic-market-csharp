@model IEnumerable<generic_market_csharp.Models.Category>

@{
    Layout = "_LayoutManagement";
}

<h2>Categories</h2>
<hr/>
<a asp-action="NewCategory" asp-controller="Management" class="btn btn-success">
    Create new category
</a>
<hr/>

<script>
    $(document).ready(function () {
        $('#table-categories').DataTable();
    });
</script>

<table id="table-categories" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a
                        class="btn btn-primary"
                        href="/Management/EditCategory/@category.Id"
                    >
                        Edit
                    </a>
                    <form style="display: inline;" asp-controller="Category" asp-action="Delete">
                        <input type="hidden" name="id" id="id" value="@category.Id">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>